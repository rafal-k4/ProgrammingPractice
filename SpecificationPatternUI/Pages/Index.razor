@page "/"
@using SpecificationPatternLogic
@using Microsoft.EntityFrameworkCore 
@inject SpecPatternDbContext dbContext

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

<div></div>

<table class="table">
    <thead>
        <tr>
            <td>ID</td>
            <td>Name</td>
            <td>ReleaseDate</td>
            <td>Genre</td>
            <td>MpaaRating</td>
            <td>Rating</td>
            <td>Director Name</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in dbContext.Movies.Include(x => x.Director))
        {
        <tr>
            <td>@movie.MovieId</td>
            <td>@movie.Name</td>
            <td>@movie.ReleaseDate</td>
            <td>@movie.Genre</td>
            <td>@movie.MpaaRating</td>
            <td>@movie.Rating</td>
            <td>@movie.Director.Name</td>
        </tr>
        }
    </tbody>
</table>